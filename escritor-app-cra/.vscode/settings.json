{
  "docker.commands.build": [
    {
      "command": "build",
      "args": [
        "--pull",
        "--security-opt",
        "seccomp=unconfined",
        "-t",
        "${tag}",
        "${dockerBuildContext}"
      ]
    }
  ],
  "docker.languageserver.diagnostics.vulnerabilities": "ignore",
  "docker.languageserver.diagnostics.deprecatedMaintainer": "ignore",
  "docker.languageserver.diagnostics.directiveCasing": "ignore",
  "docker.languageserver.diagnostics.instructionCasing": "ignore",
  "docker.languageserver.diagnostics.recommendedTag": "ignore",
  "docker.languageserver.diagnostics.critical_high_vulnerabilities": "ignore",
  
  // Desativar completamente os diagn√≥sticos do Docker
  "docker.diagnostics.validateVersion": false,
  "docker.languageserver.enabled": false,
  "docker.languageserver.diagnostics.enabled": false,
  "editor.semanticHighlighting.enabled": false
} 